<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Smoke Test Suite">
    <listeners>
        <listener class-name="com.restassured.framework.listeners.TestListener" />
    </listeners>
    
    <test name="Authentication API Tests">
        <classes>
            <class name="com.restassured.framework.tests.api.AuthApiTest">
                <methods>
                    <include name="testLogin" />
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="User API Tests">
        <classes>
            <class name="com.restassured.framework.tests.api.UserApiTest">
                <methods>
                    <include name="testGetAllUsers" />
                </methods>
            </class>
        </classes>
    </test>
</suite>
